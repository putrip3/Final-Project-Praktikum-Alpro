#include <stdio.h>
#include <string.h>
#include <stdlib.h>

struct akun{//abstrak data tipe
	char nama[50];
	int pin;
	int norek;
	int saldo;
};

void banner()
{
	printf("=================================== \n");
	printf("========ATM POWERPUF GIRLS========= \n");
	printf("=================================== \n");
}

int main()
{
	int n,i,j,pin,pil,nom,saldo,jumnom,r,s,t;//inisialisasi variabel
	char nama[50];//inisialisasi char nama 
	struct akun input[j];//
	start:
	printf("\t\t+----------------------------------------------+ \n");
